<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/introSet1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".intro.IntroSet1">

        <!-- Scrollable Content -->
        <ScrollView
            android:id="@+id/scrollContent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:clipToPadding="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/start1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:fontFamily="@font/pretendard_bold"
                            android:text="가입을 환영합니다!"
                            android:textColor="@color/secondary"
                            android:textSize="34sp" />

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/pretendard_medium"
                            android:text="잇또는 당신의 건강한 식생활을 응원하는 앱입니다.  "
                            android:textColor="@color/secondary" />

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="28dp"
                            android:fontFamily="@font/pretendard_medium"
                            android:text="· 나에게 맞는 식단 추천"
                            android:textColor="@color/secondary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/text4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/pretendard_medium"
                            android:text="· 궁금했던 건강 정보 탐색"
                            android:textColor="@color/secondary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/text5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/pretendard_medium"
                            android:text="· 함께하는 즐거움, 커뮤니티"
                            android:textColor="@color/secondary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/text6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="28dp"
                            android:layout_marginBottom="28dp"
                            android:fontFamily="@font/pretendard_medium"
                            android:text="잇또와 함께 더욱 건강하고 행복한 하루를 만들어보세요!"
                            android:textColor="@color/secondary" />
                </LinearLayout>
        </ScrollView>

        <!-- Fixed Bottom Button -->
        <Button
            android:id="@+id/start1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="@color/sub"
            android:fontFamily="@font/pretendard_bold"
            android:text="시작하기"
            android:textColor="@color/secondary"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
